# PETNOW-DOGS - Variables de Entorno
# Copia este archivo a .env y ajusta los valores según tu configuración

# Base de Datos PostgreSQL
POSTGRES_DB=petnow_db
POSTGRES_USER=petnow_user
POSTGRES_PASSWORD=petnow_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# JWT Configuration
JWT_SECRET=petnow_jwt_secret_key_2024_very_long_and_secure_for_hmac_sha256_algorithm
JWT_EXPIRATION=86400000

# Google Cloud Storage (para imágenes de mascotas)
GCS_BUCKET_NAME=petnow-images
GOOGLE_CLOUD_PROJECT=petnow-project
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# URLs de Servicios (para desarrollo local)
AUTH_SERVICE_URL=http://localhost:8081
OWNER_SERVICE_URL=http://localhost:8082
PET_SERVICE_URL=http://localhost:8083
ALERT_SERVICE_URL=http://localhost:8084
SCAN_SERVICE_URL=http://localhost:8086
AI_SERVICE_URL=http://localhost:8085

# Configuración del Frontend
EXPO_API_URL=http://localhost:8080
EXPO_DEBUG=true

# Configuración de Logs
LOG_LEVEL=INFO
SPRING_PROFILES_ACTIVE=dev 